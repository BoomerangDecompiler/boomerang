# Compile ordinary files
$(STATIC_OBJS): %.o : %.cpp
	$(CXX) $(CXXFLAGS) -c -o $@ $(EXTRA) $<

$(TEST_OBJS): %.o : %.cpp
	$(CXX) $(CXXFLAGS) -c -o $@ $(EXTRA) $<

driver.o: driver.cpp include/boomerang.h
	$(CXX) $(CXXFLAGS) -c -o $@ -Icodegen $(EXTRA) $<

testAll.o: testAll.cpp
	$(CXX) $(CXXFLAGS) -c -o $@ $(EXTRA) $< $(INCLUDEALL)

